<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.webdev.productsystem.Tours.Ticket.Domain.Tickets" table="tickets">
        <composite-id name="ticketId" class="com.webdev.productsystem.Tours.Ticket.Domain.ValueObjects.TicketId" access="field">
            <key-property name="value" column="id" access="field" length="36"/>
        </composite-id>

        <component name="ticketDate" class="com.webdev.productsystem.Tours.Ticket.Domain.ValueObjects.TicketDate" access="field">
            <property name="value" column="date" access="field" type="string"/>
        </component>

        <component name="ticketGate" class="com.webdev.productsystem.Tours.Ticket.Domain.ValueObjects.TicketGate" access="field">
            <property name="value" column="gate" access="field" type="integer"/>
        </component>

        <component name="ticketSeat" class="com.webdev.productsystem.Tours.Ticket.Domain.ValueObjects.TicketSeat" access="field">
            <property name="value" column="seat" access="field" type="integer"/>
        </component>

        <component name="originCity" class="com.webdev.productsystem.Tours.City.Domain.ValueObjects.CityId" access="field">
            <property name="value" column="origin" access="field" type="string"/>
        </component>

        <component name="destinationCity" class="com.webdev.productsystem.Tours.City.Domain.ValueObjects.CityId" access="field">
            <property name="value" column="destination" access="field" type="string"/>
        </component>

        <component name="userId" class="com.webdev.productsystem.Users.User.Domain.ValueObjects.UserId" access="field">
            <property name="value" column="user_id" access="field" type="string"/>
        </component>

    </class>
</hibernate-mapping>